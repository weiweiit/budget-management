{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ng serve",
      "command": "ng",
      "type": "shell",
      "args": ["serve"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "typescript",
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Compiled succesfully"
        }
      }
    }
  ]
}
